{erl_opts, [debug_info, warn_export_vars, warn_shadow_vars, warn_obsolete_guard]}.

{plugins, [
           {rebar3_elixir, {git, "git@gitlab.botsunit.com:msaas/rebar3_elixir.git", {branch, "master"}}}
          ]}.

{deps, [
  {lager, "~> 3.2.0"},
  {bucs, {git, "https://github.com/botsunit/bucs.git", {tag, "0.0.1"}}},
  {doteki, {git, "https://github.com/botsunit/doteki.git", {tag, "0.0.1"}}},
  {poolgirl, {git, "https://github.com/botsunit/poolgirl.git", {tag, "0.0.1"}}},
  {bristow, {git, "https://github.com/botsunit/bristow.git", {tag, "0.0.1"}}}
 ]}.


{eunit_opts, [
              verbose, {report, {eunit_surefire, [{dir, "test/eunit"}]}}
             ]}.

{profiles, [
            {test, [
                    {deps, [meck]}
                   ]},
            {doc, [
                   {deps, [
                           {edown, {git, "https://github.com/botsunit/edown.git", {branch, "master"}}}
                          ]},
                   {edoc_opts, [
                                {doclet, edown_doclet}
                                , {app_default, "http://www.erlang.org/doc/man"}
                                , {source_path, ["src"]}
                                , {overview, "overview.edoc"}
                                , {stylesheet, ""}
                                , {image, ""}
                                , {top_level_readme, {"./README.md", "https://github.com/botsunit/kafe"}}
                               ]}
                   ]}
           ]}.

