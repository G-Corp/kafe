{erl_opts, [
  debug_info,
  {parse_transform, lager_transform}
]}.
{deps, [
  {lager, ".*", {git, "https://github.com/basho/lager", "master"}},
  {eunit_formatters, ".*", {git, "git://github.com/seancribbs/eunit_formatters", "master"}},
  {eutils, ".*", {git, "https://github.com/emedia-project/eutils", "master"}}
]}.
{eunit_opts, [
  no_tty,  %% This turns off the default output, MUST HAVE
  {report, {eunit_progress, []}} 
  %% Uses the progress formatter
]}.
