{erl_opts, [
  debug_info,
  {parse_transform, lager_transform}
]}.
{deps, [
  {lager, ".*", {git, "https://github.com/basho/lager.git", {branch, "master"}}},
  {edown, ".*", {git, "https://github.com/uwiger/edown.git", {branch, "master"}}},
  {eutils, ".*", {git, "https://github.com/emedia-project/eutils.git", {branch, "master"}}}
]}.
{eunit_opts, [
  verbose, 
  {report,{eunit_surefire,[{dir,"."}]}}
]}.
{edoc_opts, [{doclet, edown_doclet}
             , {app_default, "http://www.erlang.org/doc/man"}
             , {new, true}
             , {packages, false}
             , {stylesheet, ""}   % don't copy stylesheet.css
             , {image, ""}        % don't copy erlang.png
             , {top_level_readme, {"./documentation.md", "https://github.com/homeswap/kafe"}}
            ]}.

