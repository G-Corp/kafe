[
  {kafe, [
    {brokers, [
      {"kafka1", 9191}
      , {"kafka2", 9192}
      , {"kafka3", 9193}
    ]},
    {pool_size, 1},
    {chunk_pool_size, 2},
    {brokers_update_frequency, 1000},
    {protocol_timeout, 60000},
    {client_id, <<"kafe">>},
    {api_version, auto},
    % {api_version, 0},
    {correlation_id, 0},
    {socket, [
      {sndbuf, 4194304},
      {recbuf, 4194304},
      {buffer, 4194304}
    ]}
  ]},
  {lager, [
    {handlers, [
      {lager_console_backend, [debug,
        {lager_default_formatter, [time, " ", pid, " \e[1;36m", {module, [module, ":", function, " "], ""}, color, message, "\e[0m\r\n"]}
      ]},
      {lager_file_backend, [
        {file, "../kafe_debug.log"},
        {level, debug},

        {formatter, lager_default_formatter},
        {formatter_config,
          [time, " ", pid, " [", severity, "] ", {module, [module, ":", function, " "], ""}, message, "\n"]
        }
      ]}
    ]}
  ]}
].
